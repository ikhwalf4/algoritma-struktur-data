#===Bubble Sorting===
def bubble_sort(arr):
    n = len(arr)
    for i in range(n-1):
        for j in range(n-i-1):
            if arr[j] > arr[j+1]:
                arr[j], arr[j+1] = arr[j+1], arr[j]

data = [15, 27, 36, 12, 21]
bubble_sort(data)
print("Bubble Sort:", data)

# Output
# Bubble Sort: [12, 15, 21, 27, 36]

#===Selection Sorting===
def selection_sort(arr):
    n = len(arr)
    for i in range(n):
        min_index = i
        for j in range(i+1, n):
            if arr[j] < arr[min_index]:
                min_index = j
        arr[i], arr[min_index] = arr[min_index], arr[i]

data = [15, 27, 36, 12, 21]
selection_sort(data)
print("Selection Sort:", data)

# Output
# Selection Sort: [12, 15, 21, 27, 36]

#===Insertion Sorting===
def insertion_sort(arr):
    n = len(arr)
    for i in range(1, n):
        key = arr[i]
        j = i - 1
        while j >= 0 and arr[j] > key:
            arr[j+1] = arr[j]
            j -= 1
        arr[j+1] = key

data = [15, 27, 36, 12, 21]
insertion_sort(data)
print("Insertion Sort:", data)

# Output
# Insertion Sort: [12, 15, 21, 27, 36]

